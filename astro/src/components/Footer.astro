<footer class="border-t border-accent/40 bg-primary">
  <div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-6 text-main-text sm:flex-row sm:items-center sm:justify-between">
    <div class="flex items-center gap-4">
      {socials.map((social) => (
        <a
          class="flex h-10 w-10 items-center justify-center rounded-full border border-transparent transition hover:-translate-y-1 hover:scale-105 hover:border-accent"
          href={social.href}
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="sr-only">{social.label}</span>
          <span aria-hidden="true" class="text-main-text" set:html={social.icon} />
        </a>
      ))}
    </div>
    <p class="text-sm text-secondary-text">
      © {year} · Crafted with Astro & Tailwind · Hosted on Netlify
